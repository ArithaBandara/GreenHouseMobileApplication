<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />

    <ImageView
            android:id="@+id/centerflower"
            android:src="@drawable/now"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

        <ImageView
                android:id="@+id/logo_icon"
                android:layout_width="55dp"
                android:layout_height="47dp"
                android:src="@drawable/now"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.56"
                app:layout_constraintHorizontal_bias="0.299"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pavathma"
                android:textColor="@color/white"
                android:textSize="28sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/logo_icon"
                app:layout_constraintVertical_bias="0.56"
                app:layout_constraintHorizontal_bias="0.001"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold|italic"
                android:fontFamily="serif"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Tradition shapes our roots, Technology fuels our growth"
              android:textSize="30sp"
              android:id="@+id/word"
              android:textAlignment="center"
              android:textColor="#F4F1F1"
              android:fontFamily="sans-serif-black"
    />


</FrameLayout>
